<h1>Listing Students</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th></th>
  </tr>
 
  <% @students.each do |student| %>
    <tr>
      <td><%= student.fname %></td>
      <td><%= student.lname %></td>
      <td><%= link_to 'Show', student_path(student) %></td>
      <td><%= link_to 'Delete', student_path(student),
                                method: :delete,
                                data: { confirm: 'Are you sure you wish to delete this student?' } %></td>
    </tr>
  <% end %>
</table>
